<?xml version="1.0" encoding="utf-8" ?>
<application xmlns="http://ns.adobe.com/air/application/19.0">

    <id>com.matyasf.stardustAIR</id>
    <filename>Stardust editor</filename>
    <name>Stardust editor</name>
    <versionNumber>1.1</versionNumber>

    <description>Application for editing .sde files. Needs internet connection to work. For details see http://wiki.starling-framework.org/extensions/stardust-engine</description>

    <initialWindow>
        <content>SWF file name is set automatically at compile time</content>

        <title>Stardust editor</title>

        <visible>true</visible>

        <width>1100</width>

        <height>650</height>
        <minSize>400 500</minSize>
        <renderMode>direct</renderMode>
        <requestedDisplayResolution>high</requestedDisplayResolution>
    </initialWindow>

    <icon>
        <image16x16>appicons/Magic_stick_with_stars_16.png</image16x16>
